<h1>Criar Membro</h1>

<%= content_for :javascripts do %>
  <%= javascript_include_tag 'site/profile/ads' %>
<% end %>

<% if @profile_member.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>

    <ul>
        <% @profile_member.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>

    </div>
<% end %>

<%=form_for(@profile_member, url: site_profile_my_datum_path(@profile_member)) do |f|%>

  <div class="row">
    <div class="col-xs-6">
      <div class="form-group">
        <%=f.label "Primeiro Nome"%>
        <%=f.text_field :first_name, class:"form-control", placeholder: "Primeiro Nome" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-6">
      <div class="form-group">
        <%=f.label "Segundo Nome"%>
        <%=f.text_field :second_name, class:"form-control", placeholder: "Segundo Nome" %>
      </div>
    </div>
  </div>



  <div class="row">
    <div class="col-xs-3">
      <div class="form-group">
        <%=f.label "Data de Aniversário"%>
        <%=f.text_field :birthdate, class:"form-control datepicker",
            value: (l(@profile_member.birthdate) unless @profile_member.birthdate.blank?)%>
      </div>
    </div>
  </div>

  </div>



          <%=submit_tag "Enviar", class: "btn btn-default" %>


<% end %>