

    <div class="thumbnail">
        <%=image_tag @ad.picture.url(:large), class:"img-responsive" %>
        <div class="caption-full">
            <h4 class="pull-right"><%=humanized_money_with_symbol(@ad.price)%></h4>
            <h4><a href="#"><%=@ad.title%></a></h4>
            <%= @ad.description.html_safe %>
        </div>

    </div>

    <div class="well well-sm">
        <div class="ratings">
            <p>
                <p class="pull-right"><%=@ad.rates('quality').count%> Avaliações</p>
                <%= rating_for @ad, 'quality' %>
            </p>
        </div>
    </div>


    <div class="well">
        <div class="text-right">
            <!-- Button trigger modal -->
            <% if member_signed_in? %>
                <button type="button" class="btn btn-success"
                        data-toggle="modal" data-target="#commentModal">
                        Deixe Comentário
                </button>
            <% else %>
                <%=link_to "Efetue Login para Comentar", new_member_session_path, class:"btn btn-success"%>

            <% end %>
        </div>

        <hr>
        <%= render partial: 'site/ad_detail/comments' %>

    </div>

    <%= render partial: 'site/ad_detail/comment_modal' %>


